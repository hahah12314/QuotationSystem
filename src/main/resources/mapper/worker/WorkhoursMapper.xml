<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanshu.worker.mapper.WorkhoursMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, process_name, worker_id, cost，hour
    </sql>
    <select id="getWorkhoursByProcess" resultType="com.wanshu.worker.entity.Workhours">
        select * from workhours where process_name = #{processName}
    </select>

</mapper>
