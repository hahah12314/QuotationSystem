<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanshu.cost.mapper.CuttingCostMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, detail_id, num_cut, cut_fee, total_cut_cost
    </sql>
    <select id="selectByDetailId" resultType="com.wanshu.cost.entity.CuttingCost"
            parameterType="java.lang.Integer">
        select * from cutting_cost where detail_id = #{detailId}
    </select>

    <delete id="deleteCuttingCostById" parameterType="java.lang.Integer">
        DELETE FROM cutting_cost WHERE id = #{id}
    </delete>

</mapper>
