<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanshu.sys.mapper.SysRoleMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        role_id
        , role_name, remark, create_user_id, create_time
    </sql>
    <insert id="insertMenuByRoleId">
        insert into sys_role_menu(role_id, menu_id) values
        <foreach collection="menuList" item="item" separator=",">
            (#{roleId},#{item})
        </foreach>
    </insert>
    <delete id="deleteMenuByRoleId">
        delete from sys_role_menu where role_id = #{roleId}
    </delete>
    <select id="queryRoleByUserId" resultType="com.wanshu.sys.entity.SysRole">
        select *
        from sys_role s
        where s.role_id in (select role_id from sys_user_role s2 where s2.user_id = #{userId})
    </select>
    <select id="queryUserByRoleId" resultType="com.wanshu.sys.entity.SysUser">
        select *
        from sys_user s
        where s.user_id in (select user_id from sys_user_role s2 where s2.role_id = #{roleId})
    </select>

</mapper>
